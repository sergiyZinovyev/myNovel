{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./tsconfig.editor.json"
    }
  ],
  "compilerOptions": {
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@environment/*": [ "apps/mynovel-web/src/environments/*" ],
      "@shared/*": [ "apps/mynovel-web/src/app/shared/*" ],
      "@pages/*": [ "apps/mynovel-web/src/app/pages/*" ],
      "@backend/*": [ "apps/mynovel-web/src/app/backend/*" ],
      "@core/*": [ "apps/mynovel-web/src/app/core/*" ],
      "@app/*": [ "apps/mynovel-web/src/app/*" ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
